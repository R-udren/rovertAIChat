# Caddyfile - Uses environment variables for domain
# Works for both development (localhost) and production (your domain)

{$DOMAIN:localhost} {
    # API routes
    handle /api/* {
        reverse_proxy backend:8000
    }
    
    # API documentation
    handle /docs* {
        reverse_proxy backend:8000
    }
    
    handle /redoc* {
        reverse_proxy backend:8000
    }
    
    handle /openapi.json {
        reverse_proxy backend:8000
    }
    
    # Frontend static files
    handle {
        reverse_proxy frontend:80
    }
    
    # Security headers
    header {
        X-Frame-Options DENY
        X-Content-Type-Options nosniff
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        # Add HSTS only for production (non-localhost)
        @production not remote_ip private_ranges
        Strict-Transport-Security "max-age=31536000; includeSubDomains" @production
    }
}